<root>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/battle_sim.js" />
        <include src="file://{resources}/scripts/custom_game/main_ui.js" />
        <include src="file://{resources}/scripts/custom_game/chat_ui.js" />
        <include src="file://{resources}/scripts/custom_game/battle_ui.js" />
        <include src="file://{resources}/scripts/custom_game/unit_defs.js" />
    </scripts>
    <styles>
        <include src="file://{resources}/styles/custom_game/battle.css" />
        <include src="file://{resources}/styles/custom_game/hand.css" />
    </styles>
    <Panel class="main_panel" hittest="false">
        <Panel id="chat" style="flow-children: down; x: 100px; y: 400px;">
            <Label text="Barrens chat" style="color: white; font-size: 22px;"/>
            <Panel id="chat_messages" style="flow-children: down; color: white; font-size: 16px;"/>
        </Panel>

        <Panel id="battle_ui" hittest="false">
            <Panel id="control_panel">
                <Panel id="heroes_panel">
                    <Panel id="background"/>
                    <Panel id="inset_shadow"/>
                    <Panel id="hero_rows">
                    </Panel>
                </Panel>
                <Panel id="right_flare"/>
            </Panel>

            <Panel id="current_targeted_ability" hittest="false" hittestchildren="false">
                <Panel id="hero"/>
                <Label id="text" text="Select ability target"/>
                <Panel id="image"/>
            </Panel>

            <Label id="current_turning_player_label"/>

            <Button id="end_turn_button" onactivate="end_turn();">
                <Label text="End turn"/>
            </Button>

            <Panel id="stat_bar_container" hittest="false"/>

            <Panel id="hand_ui" hittest="false">
                <Panel class="card">
                    <Image style="width: 100%; height: 100%;" src="file://{images}/custom_game/heroes/sniper.jpg" scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Panel id="name_panel">
                        <Label text="Sniper"/>
                    </Panel>

                    <Panel id="stat_panel">
                        <Panel id="health" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="24"/>
                        </Panel>
                        <Panel id="attack" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="5"/>
                        </Panel>
                        <Panel id="move_points" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="3"/>
                        </Panel>
                    </Panel>
                </Panel>
                <Panel class="card">
                    <Image style="width: 100%; height: 100%;" src="file://{images}/custom_game/heroes/luna.jpg" scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Panel id="name_panel">
                        <Label text="Luna"/>
                    </Panel>

                    <Panel id="stat_panel">
                        <Panel id="health" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="25"/>
                        </Panel>
                        <Panel id="attack" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="5"/>
                        </Panel>
                        <Panel id="move_points" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="4"/>
                        </Panel>
                    </Panel>
                </Panel>
                <Panel class="card">
                    <Image style="width: 100%; height: 100%;" src="file://{images}/custom_game/heroes/pudge.jpg" scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Panel id="name_panel">
                        <Label text="Pudge"/>
                    </Panel>

                    <Panel id="stat_panel">
                        <Panel id="health" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="35"/>
                        </Panel>
                        <Panel id="attack" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="7"/>
                        </Panel>
                        <Panel id="move_points" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="2"/>
                        </Panel>
                    </Panel>
                </Panel>
                <Panel class="card">
                    <Image style="width: 100%; height: 100%;" src="file://{images}/custom_game/heroes/tide.jpg" scaling="stretch-to-fit-y-preserve-aspect"/>
                    <Panel id="name_panel">
                        <Label text="Tidehunter"/>
                    </Panel>

                    <Panel id="stat_panel">
                        <Panel id="health" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="35"/>
                        </Panel>
                        <Panel id="attack" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="6"/>
                        </Panel>
                        <Panel id="move_points" class="stat_container">
                            <Panel id="icon"/>
                            <Label id="value" text="3"/>
                        </Panel>
                    </Panel>
                </Panel>

            </Panel>
        </Panel>

        <Panel id="global_map_ui">
        </Panel>
    </Panel>
</root>
