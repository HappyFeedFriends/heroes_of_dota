{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "noImplicitAny": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "outFile": "dist/reflection.js",
    "composite": true,
    "lib": [
      "es2016"
    ],
    "plugins": [
      {
        "transform": "../codegen/src/meta.ts"
      }
    ]
  },
  "include": [
    "**/*.ts"
  ]
}