{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "noImplicitAny": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "outFile": "dist/battle_sim.js",
    "lib": [
      "es2016"
    ],
    "plugins": [
      {
        "transform": "../codegen/src/ability_generator.ts"
      },
      {
        "transform": "../codegen/src/copy_by_type.ts"
      },
      {
        "transform": "../codegen/src/meta.ts"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "../api_definitions/api.d.ts",
    "../api_definitions/abilities.d.ts",
    "../api_definitions/api_local.d.ts",
    "../api_definitions/spells.d.ts"
  ]
}